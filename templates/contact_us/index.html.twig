{% extends 'base.html.twig' %}

{% block title %}Envoie-nous un petit message !{% endblock %}

{% block body %}

    <section id="contact-us">
        <h2>Contactez-nous</h2>

        {{ form_start(form) }}
        <div id="form">
            <div class="cont-flex">
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
            </div>

            {{ form_row(form.mail) }}
            {{ form_row(form.objet) }}
            {{ form_row(form.contenu) }}

            <div class="button-div">
                {{ form_row(form.submit) }}
            </div>

        </div>
        {{ form_end(form) }}
        {#  {{ form(form) }}#}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </section>
{% endblock %}
